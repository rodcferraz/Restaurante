@model Restaurante.Web.Data.Prato

@{
    ViewData["Title"] = "Detalhes do Prato";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Nome</h4>
        <dl class="row">
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Nome</dd>

            <dt class="col-sm-2">Descrição</dt>
            <dd class="col-sm-10">@Model.Descricao</dd>

            <dt class="col-sm-2">Ingredientes</dt>
            <dd class="col-sm-10">
                @if (Model.Ingredientes != null && Model.Ingredientes.Any())
                {
                    <ul>
                        @foreach (var ingrediente in Model.Ingredientes)
                        {
                            <li>@ingrediente.Nome</li>
                        }
                    </ul>
                }
                else
                {
                    <span>Nenhum ingrediente cadastrado.</span>
                }
            </dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>